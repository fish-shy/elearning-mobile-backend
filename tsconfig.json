{
  "compilerOptions": {
    /* MENGUBAH TARGET KE VERSI AMAN */
    "target": "ES2019",       
    "module": "commonjs",     // <-- INI KUNCINYA. Wajib commonjs.
    "moduleResolution": "node",

    /* Output Folder */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Interop (Supaya library aneh-aneh bisa jalan) */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    /* Lain-lain */
    "strict": true,
    "skipLibCheck": true,     // Abaikan error di file library orang lain
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*.spec.ts"]
}